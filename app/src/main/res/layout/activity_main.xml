<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/you"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:text="@string/default_clear_count"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/you"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/answer_x_text"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="30dp"
        android:width="100dp"
        android:gravity="center"
        android:text="@string/you"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/sensor_x_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="40dp"
        android:width="100dp"
        android:gravity="left"
        android:text="@string/sensor_x_text"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/sensor_y_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sensor_x_text"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        android:width="100dp"
        android:gravity="left"
        android:text="@string/sensor_y_text"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/adjust"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/you"
        android:layout_marginRight="30dp"
        android:width="100dp"
        android:gravity="center"
        android:text="@string/adjust"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/answer_x_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/sensor_x_text"
        android:layout_marginRight="20dp"
        android:width="100dp"
        android:gravity="left"
        android:text="@string/answer_x_text"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/answer_y_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/answer_x_text"
        android:layout_marginRight="20dp"
        android:layout_marginTop="40dp"
        android:width="100dp"
        android:gravity="left"
        android:text="@string/answer_y_text"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ProgressBar
        android:id="@+id/progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/answer_y_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/circle_shape"
        android:indeterminate="false"
        android:max="5"
        android:progress="0"
        android:progressDrawable="@drawable/circular_progress_bar" />

    <TextView
        android:id="@+id/count_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/progress_bar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:text="@string/start_time"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>
